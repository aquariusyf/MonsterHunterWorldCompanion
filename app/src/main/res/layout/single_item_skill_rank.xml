<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/skill_level_item_padding"
    android:layout_margin="@dimen/skill_level_item_margin">

    <TextView
        android:id="@+id/tv_skill_rank_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        tools:text="Lv.1"
        style="@style/SkillLevelDescriptionTextStyle"
        android:textStyle="bold"
        android:textColor="@color/colorGolden"/>

    <TextView
        android:id="@+id/tv_skill_rank_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        tools:text="Skill level description. An aura of frost builds when your weapon is sheathed, raising attack. Wanes each melee hit or shot fired."
        style="@style/SkillLevelDescriptionTextStyle" />

</LinearLayout>