<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_other_activity"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/monster_list_item_margin">

                <ImageView
                    android:id="@+id/iv_monster_icon"
                    android:src="@drawable/anjanath_icon"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/monster_list_screen_monster_icon_width"
                    android:layout_height="@dimen/monster_list_screen_monster_icon_height"
                    android:layout_gravity="left"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/monster_list_screen_monster_icon_height"
                    android:layout_marginLeft="@dimen/monster_list_text_layout_margin_to_icon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_monster_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        tools:text="Monster Name"
                        style="@style/MonsterListNameTextStyle"/>

                    <TextView
                        android:id="@+id/tv_monster_species"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAllCaps="true"
                        tools:text="Species"
                        style="@style/MonsterListSpeciesTextStyle"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/monster_detail_description_margin"
                tools:text="This is description of the monster"
                style="@style/MonsterDetailDescriptionTextStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/monster_detail_location_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/monster_detail_location_label"
                    style="@style/MonsterDetailLocationLabelTextStyle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    tools:text="Monster locations"
                    style="@style/MonsterDetailLocationTextStyle"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
